<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="@color/testhistory"
        app:cardCornerRadius="10dp"
        app:cardElevation="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="5">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/aquestion"
                android:text="ABCD"
                android:layout_weight="1"
                android:paddingHorizontal="24dp"
                android:paddingTop="18dp"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold"
                android:layout_gravity="center"
                android:gravity="center_vertical"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/aoption1"
                android:text="A) Option A"
                android:layout_weight="1"
                android:paddingHorizontal="24dp"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_medium"
                android:layout_gravity="center"
                android:gravity="center_vertical"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/aoption2"
                android:text="B) Option B"
                android:layout_weight="1"
                android:paddingHorizontal="24dp"
                android:textSize="16sp"

                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_medium"
                android:layout_gravity="center"
                android:gravity="center_vertical"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/aoption3"
                android:text="C) Option C"
                android:layout_weight="1"
                android:paddingHorizontal="24dp"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_medium"
                android:layout_gravity="center"
                android:gravity="center_vertical"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/aoption4"
                android:text="D) Option D"
                android:layout_weight="1"
                android:paddingHorizontal="24dp"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_medium"
                android:layout_gravity="center"
                android:gravity="center_vertical"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/userresponce"
                android:text="You Answered: A"
                android:layout_weight="1"
                android:paddingHorizontal="24dp"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold"
                android:layout_gravity="center"
                android:gravity="center_vertical"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/correct"
                android:text="Correct Answer: B"
                android:layout_weight="1"
                android:paddingBottom="18dp"
                android:paddingHorizontal="24dp"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold"
                android:layout_gravity="center"
                android:gravity="center_vertical"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>